---
import { getCollection } from "astro:content";
const allPosts = await getCollection("work");
import BaseLayout from "@/layouts/BaseLayout.astro";
import ProjectPreviews from "../../components/project/ProjectPreviewCard.astro";
---

<BaseLayout>
  <section class="bg-neutral-100">
    <div class="mx-auto max-w-7xl px-6 lg:flex lg:px-8 py-20">
      <div class="lg:ml-96 lg:flex lg:w-full lg:justify-end lg:pl-32">
        <div class="mx-auto max-w-lg lg:mx-0 lg:w-0 lg:max-w-xl lg:flex-auto">
          <h1 class="font-display text-5xl font-medium text-kotei-800">
            Projects
          </h1>
          <p class="mt-4 text-sm text-neutral-500">
            <span class="lgh:blocl">
              A few projects from over the years.</span
            >
          </p>
          <div class="grid grid-cols-1 lg:grid-cols-1 mt-12 gap-10">
            {
              allPosts
                .slice()
                .map((post) => (
                  <ProjectPreviews
                    url={"/work/" + post.slug}
                    name={post.data.client}
                    alt={post.data.title}
                    thumbnail={post.data.thumbnail.url}
                  />
                ))
            }
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
