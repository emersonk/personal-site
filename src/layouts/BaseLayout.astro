---
import BaseHead from "@/components/BaseHead.astro";
import Sidebar from "@/components/global/Sidebar.astro";

const isHomepage = Astro.request.url === "/";
---
<html lang="en">
  <head>
    <BaseHead />
    <style>
      /* CSS to hide sidebar on screens smaller than 768px except on the homepage */
      @media (max-width: 768px) {
        .sidebar-hidden {
          display: none;
        }
      }
    </style>
  </head>
  <body class="flex min-h-full flex-col bg-neutral-50">
    <Sidebar class={isHomepage ? "" : "sidebar-hidden"} />
    <slot />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@splidejs/splide@4.0.7/dist/css/splide.min.css">
    <script src="https://cdn.jsdelivr.net/npm/@splidejs/splide@4.0.7/dist/js/splide.min.js"></script>
    <script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"></script>
  </body>
</html>
