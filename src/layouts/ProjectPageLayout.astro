---
import BaseLayout from "./BaseLayout.astro";
const { frontmatter } = Astro.props;
---

<BaseLayout>
  <section class="bg-neutral-100">
    <div class="mx-auto max-w-7xl px-6 lg:flex lg:px-8 py-20">
      <div class="lg:ml-96 lg:flex lg:w-full lg:justify-end lg:pl-32">
        <div class="mx-auto max-w-lg lg:mx-0 lg:w-0 lg:max-w-xl lg:flex-auto">
          <h1 class="font-display text-5xl font-medium text-kotei-800">
            {frontmatter.client}
          </h1>
          <p class="mt-4 text-sm text-neutral-500">
            {frontmatter.description}
          </p>
          <p class="text-neutral-500 mt-8 uppercase text-sm">Website</p>
          <p
            class="italic font-display font-medium text-kotei-800 hover:text-kotei-1050"
          >
            <a href={frontmatter.website}>{frontmatter.website}</a>
          </p>
          <p class="text-neutral-500 mt-8 uppercase text-sm">Status</p>
          <p
            class="font-display font-medium text-kotei-800"
          >
            {frontmatter.status}
          </p>
          <img
            class="mt-8"
            src={frontmatter.thumbnail.url}
            alt={frontmatter.thumbnail.alt}
          />
          <div class="prose-styles mt-12 t">
            <slot />
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
